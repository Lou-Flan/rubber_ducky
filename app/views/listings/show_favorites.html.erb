<div class="container">

    <% current_user.favorites.each do |listing| %>
    <div class="row">
        <div class="col"><%= show_picture(listing) %></div>
        <div class="col-6">
            <h1><%= listing.name %></h1>
            <p><%= listing.price %></p>
            <p><%= listing.description %></p>
        </div>
        <div class="col">
            <% if listing.purchased == true %>
                <p> no longer available</p>
                <%= link_to "remove from favorites", favorite_listing_path(listing, type: "unfavorite"), method: :put%>
            <% else %>
                <%= link_to "show", listing_path(listing.id), class: "btn btn-outline-secondary" %>
           <% end %>
        </div>
    </div>
    

</div>
<% end %>